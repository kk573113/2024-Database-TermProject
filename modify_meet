<?php
include 'config.php'; // PDO 연결

// URL에서 Meet_id 가져오기
if (!isset($_GET['Meet_id'])) {
    echo "<script>alert('잘못된 요청입니다.'); window.location.href='index.php';</script>";
    exit;
}
$meet_id = $_GET['Meet_id'];

// 미팅 정보 조회
$sql_meeting = "SELECT * FROM MEETING WHERE Meet_id = :meet_id";
$stmt_meeting = $pdo->prepare($sql_meeting);
$stmt_meeting->bindParam(':meet_id', $meet_id, PDO::PARAM_INT);
$stmt_meeting->execute();
$meeting = $stmt_meeting->fetch(PDO::FETCH_ASSOC);

if (!$meeting) {
    echo "<script>alert('해당 미팅 정보를 찾을 수 없습니다.'); window.location.href='index.php';</script>";
    exit;
}

// 미팅 정보 수정 처리
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $date = $_POST['Date'];
    $place = $_POST['Place'];
    $agenda = $_POST['Agenda'];
    $pf_id = $_POST['Pf_id'];

    $sql_update_meeting = "UPDATE MEETING SET Date = :date, Place = :place, Agenda = :agenda, Pf_id = :pf_id WHERE Meet_id = :meet_id";
    $stmt_update_meeting = $pdo->prepare($sql_update_meeting);
    $stmt_update_meeting->bindParam(':date', $date, PDO::PARAM_STR);
    $stmt_update_meeting->bindParam(':place', $place, PDO::PARAM_STR);
    $stmt_update_meeting->bindParam(':agenda', $agenda, PDO::PARAM_STR);
    $stmt_update_meeting->bindParam(':pf_id', $pf_id, PDO::PARAM_INT);
    $stmt_update_meeting->bindParam(':meet_id', $meet_id, PDO::PARAM_INT);

    if ($stmt_update_meeting->execute()) {
        echo "<script>alert('미팅 정보가 성공적으로 수정되었습니다.'); window.location.href='index.php';</script>";
    } else {
        echo "<script>alert('미팅 정보 수정에 실패했습니다.');</script>";
    }
}
?>

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>미팅 수정</title>
</head>
<body>
    <h1>미팅 수정</h1>
    <form method="post" action="">
        <label for="Date">날짜:</label><br>
        <input type="date" id="Date" name="Date" value="<?php echo htmlspecialchars($meeting['Date']); ?>" required><br>

        <label for="Place">장소:</label><br>
        <input type="text" id="Place" name="Place" value="<?php echo htmlspecialchars($meeting['Place']); ?>" required><br>

        <label for="Agenda">안건:</label><br>
        <input type="text" id="Agenda" name="Agenda" value="<?php echo htmlspecialchars($meeting['Agenda']); ?>" required><br>

        <label for="Pf_id">교수 ID:</label><br>
        <input type="number" id="Pf_id" name="Pf_id" value="<?php echo htmlspecialchars($meeting['Pf_id']); ?>" required><br><br>

        <button type="submit">수정</button>
    </form>
    <a href="index.php">돌아가기</a>
</body>
</html>
